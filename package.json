{
  "name": "derry",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "deploy-router": "hardhat run packages/periphery/deploy/megaeth.ts --network megaethTestnet",
    "deploy-tokens": "hardhat run scripts/deploy-more-tokens.ts --network megaethTestnet",
    "deploy-staking": "hardhat run packages/periphery/deploy/stakingRewards.ts --network megaethTestnet",
    "notify-staking": "hardhat run scripts/notify-staking-rewards.ts --network megaethTestnet",
    "change-staking-admin": "hardhat run scripts/change-staking-admin.ts --network megaethTestnet",
